{{ form_start(form, {'attr' : {'class': 'form-valide'}}) }}
<div class="form-group row">
    {{ form_label(form.title, null, {'label_attr' : {'class': 'col-lg-4 col-form-label'}}) }}
    <div class="col-lg-6">
        {{ form_widget(form.title, { 'attr' : { 'class' : 'form-control' } }) }}
    </div>
</div>
<div class="row">
    <div class="col-12">
        {{ form_widget(form.content, { 'attr' : { 'class' : 'textarea_editor form-control', 'rows': '15', 'style': 'height:450px; width: 433px; margin: auto;' } }) }}
    </div>
</div>
<div class="form-group row">
    {{ form_label(form.more, null, {'label_attr' : {'class': 'col-lg-4 col-form-label'}}) }}
    <div class="col-lg-6">
        {{ form_widget(form.more, { 'attr' : { 'class' : 'form-control'} }) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-8 ml-auto">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</div>
{{ form_end(form) }}