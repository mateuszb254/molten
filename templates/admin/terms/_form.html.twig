{{ form_start(form, {'attr' : {'class': 'form-valide'}}) }}
<div class="row">
    <div class="col-12">
        {{ form_widget(form.contents, { 'attr' : { 'class' : 'textarea_editor form-control', 'rows': '15', 'style': 'height:450px; width: 510px; margin: auto;' } }) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-8 ml-auto">
        <button type="submit" class="btn btn-primary">{% trans %}save{% endtrans %}</button>
    </div>
</div>
{{ form_end(form) }}