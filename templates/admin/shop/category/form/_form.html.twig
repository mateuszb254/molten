{{ form_start(form, {'attr' : {'class': 'form-valide'}}) }}
<div class="form-group row">
    {{ form_label(form.name, null, {'label_attr' : {'class': 'col-lg-4 col-form-label'}}) }}
    <div class="col-lg-6">
        {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control' } }) }}
        {% if form_errors(form.name) %}
            <small class="form-control-feedback"> {{ form_errors(form.name) }}</small>
        {% endif %}
    </div>
    <button type="submit" class="btn btn-success waves-effect waves-light m-r-10">{% trans %}submit{% endtrans %}</button>
</div>
{{ form_end(form) }}