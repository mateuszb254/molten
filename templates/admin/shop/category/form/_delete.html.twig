<form method="post" action="{{ path('admin_shop_category_delete', {'id': id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');" class="float-left">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="btn btn-danger">{% trans %}delete{% endtrans %}</button>
</form>