{{ dump(tickets) }}
<!DOCTYPE html>

<title>Article index</title>

{% block body %}
    <h1>Support index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Author</th>
            <th>Category</th>
            <th>Created</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.title }}</td>
                <td><a href="{{ path('admin_ticket_show', {'id': ticket.id } ) }}">{{ ticket.content }}</a></td>
                <td>{{ ticket.author }}</td>
                <td>{{ ticket.category }}</td>
                <td>{{ ticket.createdAt|date('Y-m-d H:i:s') }}</td>
                <td>{{ ticket.status }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}