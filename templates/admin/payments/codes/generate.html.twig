{% extends 'admin/base.html.twig' %}
{% block header %}{% trans %}payment.promotion_code{% endtrans %}{% endblock %}
{% block content %}
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="form-validation">
                        {% include 'admin/payments/codes/_form.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
    {{ parent() }}
    <script>
        $(function () {

            if($('#promotion_code_generate_type').val() == 1) {
                $('.promotion_code_generate_tag_row').removeClass('hide');
            }

            $('#promotion_code_generate_type').change(function () {
                var selectedValue = $(this).val();
                console.log(selectedValue);

                if (selectedValue == 1) {
                    $('.promotion_code_generate_tag_row').removeClass('hide');
                } else {
                    $('#promotion_code_generate_tag').val('');
                    $('.promotion_code_generate_tag_row').addClass('hide');
                }
            });
        });
    </script>
{% endblock %}
