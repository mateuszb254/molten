{{ form_start(form, {'attr' : {'class': 'form-valide'}}) }}
<div class="form-group row">
    {{ form_label(form.amount, null, {'label_attr' : {'class': 'col-lg-4 col-form-label'}}) }}
    <div class="col-lg-6">
        {{ form_widget(form.amount, { 'attr' : { 'class' : 'form-control' } }) }}
        {% if form_errors(form.amount) %}
            {{ form_errors(form.amount) }}
        {% endif %}
    </div>
    {{ form_label(form.value, null, {'label_attr' : {'class': 'col-lg-4 col-form-label'}}) }}
    <div class="col-lg-6">
        {{ form_widget(form.value, { 'attr' : { 'class' : 'form-control' } }) }}
        {% if form_errors(form.value) %}
            {{ form_errors(form.value) }}
        {% endif %}
    </div>
    {{ form_label(form.type, null, {'label_attr' : {'class': 'col-lg-4 col-form-label'}}) }}
    <div class="col-lg-6">
        {{ form_widget(form.type, { 'attr' : { 'class' : 'form-control' } }) }}
        {% if form_errors(form.type) %}
            {{ form_errors(form.type) }}
        {% endif %}
    </div>
    {{ form_label(form.tag, null, {'label_attr' : {'class': 'col-lg-4 col-form-label hide promotion_code_generate_tag_row'}}) }}
    <div class="col-lg-6 hide promotion_code_generate_tag_row">
        {{ form_widget(form.tag, { 'attr' : { 'class' : 'form-control' } }) }}
        {% if form_errors(form.tag) %}
            {{ form_errors(form.tag) }}
        {% endif %}
    </div>
    {{ form_label(form.expires, null, {'label_attr' : {'class': 'col-lg-4 col-form-label'}}) }}
    <div class="col-lg-6">
        {{ form_widget(form.expires, { 'attr' : { 'class' : 'form-control' } }) }}
        {% if form_errors(form.expires) %}
            {{ form_errors(form.expires) }}
        {% endif %}
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-8 ml-auto">
        <button type="submit" class="btn btn-primary">{% trans %}payment.promotion_code.generate{% endtrans %}</button>
    </div>
</div>
{{ form_end(form) }}