        <dl>
            <dt><label id="username">{% trans %}label.login{% endtrans %}</label></dt>
            <dd><input type="text" id="username" name="_username" class="input_login"/></dd>
            <dt><label>{% trans %}label.password{% endtrans %}</label></dt>
            <dd><input id="password" type="password" value="" name="_password" class="input_login"/></dd>
        </dl>
        <div class="links">
            <a href="{{ path('forgotten') }}" title="ZapomniaÅ‚em hasÅ‚a" class="remind">{% trans %}forgotten{% endtrans %}</a><br/>
