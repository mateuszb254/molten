{% extends 'user/panel/index.html.twig' %}
{% block panel_content %}
    <div class="support">
        <table class="support_table" cellpadding="0" cellspacing="0">
            <tr>
                <th class="support_content">
                    Typ
                </th>
                <th class="support_status">
                    Data
                </th>
            </tr>
            {% for log in logs %}
                <tr>
                    <td class="support_content">
                        {% if log.type == 'COINS_BOUGHT_PAYPAL' %}
                            {{ log.type|trans({'%coins%': log.additional}) }}
                        {% else %}
                            {{ log.type|trans }}
                        {% endif %}
                    </td>
                    <td class="support_status">
                        {{ log.createdAt|date }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="support_content">
                        Nie zarejestrowany Å¼adnych zmian.
                    </td>
                    <td class="support_status">
                        -
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}