{% extends 'user/base.html.twig' %}
{% block head_title %}- {% trans %}forgotten{% endtrans %}{% endblock %}
{% block content %}
    {{ parent() }}
    <div class="left" id="panel">
        <div class="upper">
        </div>
        <div class="form">
            {{ form_start(form) }}
            <div class="form-row">
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first, {'attr' : {'class' : 'input_register'}}) }}
                {% if form_errors(form.plainPassword.first) %}
                    <span class="form-error">{{ form_errors(form.plainPassword.first) }}</span>
                {% endif %}
            </div>
            <div class="form-row">
                {{ form_label(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second, {'attr' : {'class' : 'input_register'}}) }}
                {% if form_errors(form.plainPassword.second) %}
                    <span class="form-error">{{ form_errors(form.plainPassword.second) }}</span>
                {% endif %}
            </div>
            <p><input type="submit" value="" name="" class="button_send"/></p>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}